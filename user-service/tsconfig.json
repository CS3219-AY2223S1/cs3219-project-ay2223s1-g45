{
  "compilerOptions": {
    "jsx": "react",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "allowJs": true,
    "target": "es6",
    "module": "es2020",
    "strict": true,
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true
  },
  "include": ["./**/*.ts", "./**/*.tsx", "./**/*.js", "./**/*.jsx"]
}
